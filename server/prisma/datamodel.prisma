type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  vendors: [Vendor!]!
  customers: [Customer!]!
}

type Vendor {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String!
  contact: String!
  address: String!
  postedBy: User
}

type Customer {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String!
  contact: String!
  postedBy: User
}

type Bill {
  id: ID! @id
  vendor: String!
  date: String!
  account: String!
  amount: Int!
  postedBy: User
}

type Invoice {
  id: ID! @id
  customer: String!
  date: String!
  account: String!
  amount: Int!
  postedBy: User
}


